<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OpaqueButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#113bf5</item>
        <item name="android:textColor">#03ffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TransparentButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#113bf5</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextviewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#e60707</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
